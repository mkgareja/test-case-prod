{
    "compileOnSave": true,
    "compilerOptions": {
      "emitDecoratorMetadata": true,
      "target": "es6",
      "module": "commonjs",
      "outDir": "./dist",
      "sourceMap": true,
      "experimentalDecorators": true,
      "allowJs": true,
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ],
  }